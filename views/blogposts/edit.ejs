<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Edit <%= blogpost.name %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form class="ui form" action="/blogposts/<%= blogpost._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="blogpost[name]" value="<%= blogpost.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="blogpost[image]" value="<%= blogpost.image %>">
                </div>
                <div class="form-group">

                <div class="field">
                    <textarea name="blogpost[description]"><%= blogpost.description %></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/blogposts">Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>

